<div class="container">
  <div class="row my-3">
    <h2>投稿詳細</h2>
    <div class="col-xs-10 col-xs-offset-1" style="margin-top: 50px;">
      <table class="table table-bordered">
        <thead>
          <tr class="table-head" style="background-color:#F5F5F5;">
            <th scope="col">投稿者</th>
            <th scope="col">投稿日時</th>
            <th scope="col">投稿内容</th>
            <th scope="col">写真</th>
          </tr>
        </thead>
        <tbody>
          <%= @posts.each do |post| %>
            <tr>
              <td><%= @user.name %></td>
              <td>
                <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
                <p><%= post.text %></p>
                <p></p>
              </td>
            </tr>
        </tbody>
      </table>
  </div>
</div>