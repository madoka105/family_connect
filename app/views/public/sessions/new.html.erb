<!--会員ログイン画面-->

<div class="container my-5">
  <div class="row justify-content-center px-4">
    <h1 class="col-lg-12 mb-5 text-center">ログイン</h1>
  </div>

  <div class="row justify-content-center ml-5">
    <h5 class="col-lg-12 mb-3 text-center">会員の方はこちらからログイン</h5>
  </div>

  <div class="col-lg-12 registrations">
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="form-group row justify-content-center mt-2">
        <label class="col-lg-2 col-form-label" style="font-size: 20px;">メールアドレス</label>
        <div class="col-lg-4">
          <%= f.email_field :email, class: "form-control", size: "40", autofocus: true, placeholder: "sample@sample.com", autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group row justify-content-center mt-2">
        <label class="col-lg-2 col-form-label" style="font-size: 20px;">パスワード</label>
        <div class="col-lg-4">
          <%= f.password_field :password, class: "form-control", size: "40", autofocus: true, placeholder: "123456", autocomplete: "password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center mt-2">
        <div class="col-lg-4 text-center">
          <%= f.submit "ログイン", class: "btn btn-info btn-lg px-4 mt-3 mb-5" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-lg-12 text-center">
    <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-lg btn-block sign_in", method: :post %>
  </div>
</div>