<!--会員ログイン画面-->
<div class="container my-5">
  <div class="row px-4">
    <h1 class="col-12 mb-5 text-center">ログイン</h1>
  </div>

  <div class="row ml-5">
    <h5 class="col-12 mb-3 text-center">会員の方はこちらからログイン</h5>
  </div>

  <div class="col-12 registrations">
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field row justify-content-center mt-2">
        <label class="col-2">メールアドレス</label>
          <%= f.email_field :email, :size => "40", autofocus: true, placeholder: "sample@sample.com", autocomplete: "email" %>
      </div>

      <div class="field row justify-content-center mt-2">
        <label class="col-2">パスワード</label>
          <%= f.password_field :password, :size => "40", autofocus: true, placeholder: "123456", autocomplete: "password" %>
      </div>
      <div class="row justify-content-center mt-2">
        <div class="col-md-4 mb-3 text-center">
          <%= f.submit "ログイン", class:"btn btn-info px-4 mt-3 mb-5" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block sign_in", method: :post %>

