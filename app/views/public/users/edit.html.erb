<!--会員情報編集画面-->

<div class="container my-5">
  <div class="row px-4">
    <h1 class="col-12 mb-5 text-center">会員情報編集</h1>
  </div>
  <div class="col-12">
    <%= form_with model: @user, url: user_session_path do |f| %>
      <%= render "public/shared/error_messages", resource: current_user %>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">写真</label>
        <div class="col-md-9">
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">名前</label>
        <div class="col-md-7">
          <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "名前を入力してください" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">誕生日</label>
        <div class="col-md-7">
          <%= f.text_field :birthday, class: "form-control", autofocus: true, placeholder: "2000-01-01 このように入力してください" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">メールアドレス</label>
        <div class="col-md-7">
          <%= f.email_field :email, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">電話番号（ハイフンなし）</label>
        <div class="col-md-7">
          <%= f.text_field :phone_number, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class="form-group mt-4 text-center">
        <%= f.submit "編集内容を保存", class: "btn btn-success btn-lg mr-3" %>
        <%= link_to "退会する", users_check_path, class: "btn btn-danger btn-lg" %>
      </div>
    <% end %>
  </div>
</div>