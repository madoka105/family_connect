<!--会員情報編集画面-->

<div class="container">
  <div class="row mt-5">
    <div class="col-md-12">
      <h2 class="text-center mt-5">会員情報編集</h2>
    </div>
    <div class="col-md-12">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <%= render "public/shared/error_messages", resource: current_user %>

        <div class="form-group row mt-2">
          <label class="col-md-3 col-form-label">写真</label>
          <div class="col-md-9">
            <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label class="col-md-3 col-form-label">名前</label>
          <div class="col-md-9">
            <%= f.text_field :name, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label class="col-md-3 col-form-label">誕生日</label>
          <div class="col-md-9">
            <%= f.text_field :birthday, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label class="col-md-3 col-form-label">メールアドレス</label>
          <div class="col-md-9">
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label class="col-md-3 col-form-label">電話番号（ハイフンなし）</label>
          <div class="col-md-9">
            <%= f.text_field :phone_number, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row mt-5">
          <div class="col-md-9 offset-md-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            <%= link_to "退会する", users_check_path, class: "btn btn-danger ml-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>