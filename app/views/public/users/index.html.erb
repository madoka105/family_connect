<!--ユーザー一覧-->

<h1 class="text-center">会員一覧</h1>
<table class="table" style="background-color:#F5F5F5;">
  <thead>
    <tr>
      <th>写真</th>
      <th>お名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <% if current_user != user %>
      <td>
        <% if user.profile_image.attached? %>
          <%= image_tag user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td><%= user.name %></td>
      <td>フォロー数: <%= user.followers.count %></td>
      <td>フォロワー数: <%= user.followeds.count %></td>
      <td><%= render "public/relationships/btn", user: user, options: { class: "follow-link" } %></td>
      <td><%= link_to "Show", user %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center"><%= paginate(@user) %></div>