<!--マイページ-->
<div class="container">
  <div class="row-2 my-3">
    <div class="col-4">
      <%= render partial: "info", locals: { user: @user }%>
    </div>

    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h1>自己紹介</h1>
    </div>
  </div>
<div class="row">
  <div class="col-sm-3 px-sm-0 offset-sm-1">
    <h4>登録情報</h4>
  </div>
  <div class="col-sm-4 px-sm-3 px-sm-0">
    <%= link_to "編集する", users_information_edit_path, class: "btn btn-success px-4 mb-2" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 px-sm-0 offset-sm-1">
    <table class="table table-bordered">
      <tr>
        <th class="table-active">ユーザー画像</th>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
      </tr>
      <tr>
        <th class="table-active">お名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th class="table-active">電話番号</th>
        <td><%= @user.phone_number %></td>
      </tr>
      <tr>
        <th class="table-active">メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
    <%= render 'index', users: @users %>
  </div>
</div>


