<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h1>自己紹介</h1>
    </div>
  </div>
<div class="row">
  <div class="col-sm-3 px-sm-0 offset-sm-1">
    <h4>登録情報</h4>
  </div>
  <div class="col-sm-4 px-sm-3 px-sm-0">
    <%= link_to "編集する", users_information_edit_path, class: "btn btn-success px-4 mb-2" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 px-sm-0 offset-sm-1">
    <table class="table table-bordered">
      <tr>
        <th class="table-active">お名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th class="table-active">電話番号</th>
        <td><%= @user.phone_number %></td>
      </tr>
      <tr>
        <th class="table-active">メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>自己紹介</h2>
      <%= render "users/info", user: @user %>
      <h2 class="mt-3">新規投稿</h2>
      <%= render "form", post: @posts %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>投稿内容</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to @post.user do %>
            <%= image_tag @post.user.get_profile_image, size:"100x100" %><br>
            <%= @post.text %>
            <%= @post.user.name %>
          </td>
          <td><%= link_to @post.title, @post %></td>
          <td><%= @post.text %></td>
          <td><%= render "favorite/btn", post: @post %></td>
          
          <% if @post.user == current_user %>
          <td><%= link_to "編集", edit_post_path(@post.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "削除", destroy_post_path(@post.id), method: :delete, data: { conform: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>




<h2>タイトル</h2>
  <p><%= @post.title %></p>
  
<h2>本文</h2>
  <p><%= @post.text %></p>
  
<h2>画像</h2>
  <% if @post.image.attached? %>
    <%= image_tag @post.image, size: "300x300" %>
  <% else %>
    <%= image_tag 'no_image', size: "300x300" %>
  <% end %>
