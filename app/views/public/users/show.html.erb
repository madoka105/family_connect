<!--他のユーザーのマイページ-->

<div class="container">
  <div class="row my-3">
    <div class="col-4">
      <%= render partial: "info", locals: { user: @user }%>
    </div>
    <div class="col-3 col-8">
      <% if current_user == @user %>
        <%= render 'friends', users: @users %>
      <% else %>
        <%= render 'list', posts: @posts %>
      <% end %>
    </div>
  </div>
</div>


