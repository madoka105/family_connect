<!--ログインしているユーザーのマイページ-->

<h1 class="text-center">自己紹介</h1>

<table class="table" style="background-color:#FCFCD4;">
  <thead class="text-left">
    <tr>
      <th>
        <%= image_tag user.get_profile_image(150, 150), class: "rounded-circle" %>
      </th>
    </tr>
    <tr>
      <th>お名前</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>誕生日</th>
      <th><%= user.birthday %></th>
    </tr>
    <tr>
      <th>過去の日記</th>
      <th><%= link_to "見てみる", posts_path(mypage: true) %></th>
    </tr>
    <tr>
      <th>お気に入り</th>
      <th><%= link_to "見てみる", user_favorites_path(@user.id) %></th>
    </tr>
  </thead>
</table>

<div class="row justify-content-center my-2">
  <% if current_user != user %>
    <td><%= render "public/relationships/btn", user: user, options: { class: "" } %></td>
  <% else %>
    <%= link_to "編集する", edit_user_path(user), class: "btn btn-info btn-block" %>
  <% end %>
</div>

<div class="row justify-content-center my-3">
  フォロー数：<%= link_to follows_user_path(user) do %>
    <%= user.followers.count %><br>
  <% end %>

  <div class="mx-5">
    フォロワー数：<%= link_to followers_user_path(user) do %>
      <%= user.followeds.count %><br>
    <% end %>
  </div>
</div>
