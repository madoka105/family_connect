<h1 class=text-center>自己紹介</h1>

<table class="table">
  <tr>
    <th>
      <% if user.profile_image.attached? %>
        <%= image_tag user.get_profile_image(150,150) %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>お名前</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>誕生日</th>
    <th><%= user.birthday %></th>
  </tr>
  <tr>
    <th>過去の日記</th>
    <th><%= link_to "見てみる", posts_path %></th>
  </tr>あとでリンクを作る
</table>

<div class="row">
  <% if current_user != user %>
    <td><%= render "public/relationships/btn", user: user, options: { class: ""} %></td>
  <% else %>
    <%= link_to "編集する", edit_user_path(user), class: "btn btn-info btn-block" %>
  <% end %>
</div>

<th>Follows</th>
  <td>
    <%= link_to follows_user_path(user) do %>
      <h6><%= user.followers.count %></h6>
    <% end %>
  </td>
  </tr>
  <tr>
    <th>Followers</th>
    <td>
      <%= link_to followers_user_path(user) do %>
        <h6><%= user.followeds.count %></h6>
      <% end %>
    </td>
  </tr>
  <tr>
  <td>
  <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
      <% end %>
  <% end %>
  </td>