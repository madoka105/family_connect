<!--ログインしているユーザーの右側に表示-->
<!--フォローしている人を表示させる部分テンプレート-->

<h1 class=text-center>友達一覧</h1>
  <table class="table" style="background-color:#FFF4F9;">
    <thead>
      <tr>
        <th>写真</th>
        <th>お名前</th>
        <th>お誕生日</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <% if current_user != user %>
        <td>
          <% if user.profile_image.attached? %>
            <%= image_tag user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.birthday %></td>
        <td><%= link_to '話す','/chats', { class: "original-btn" } %></td>
        <td><%= render "public/relationships/btn", user: user, options: { class: "follow-link" } %></td>
        <td><%= link_to "Show", user_path(user) %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>