<!--他の会員の投稿一覧画面-->

<div class="container">
  <h1 class="text-center">日記一覧</h1>
  <div class="justify-content-center mt-2"></div>
  <div class="row">
    <div class="table post_table table-striped">
      <table>
        <thead class="thead-light">
          <tr>
            <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2">お名前</th>
            <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2">投稿日</th>
            <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2">日記</th>
            <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2">お気に入り</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.user.name %></td>
              <td>
                <%= link_to post_path(post) do %>
                  <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                <% end %>
              </td>
              <td><%= post.text %></td>
              <% if user_signed_in? %>
                <td><%= render 'public/favorites/btn', post: post %></td>
              <% else %>
                <td>
                  <%= link_to post_favorites_path(post), method: :post do %>
                    <%= image_tag 'bookmark.png', size: '70x70' %>
                    <%= post.favorites.count %> いいね
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center"><%= paginate(@post) %></div>
    </div>
  </div>
</div>