<% if admin_signed_in? %>
  <% @search_path = admin_posts_path %>
<% else %>
  <% @search_path = posts_path %>
<% end %>

<%= form_with url: search_path, method: :get do |f| %>
  <div class="row">
    <div><%= f.text_field :word, placeholder: "投稿検索" %></div>
    <div><%= f.submit "検索" %></div>
  </div>
  <% unless @search_counts.nil? %>
    <b class="row mt-3">⇒  "<%= @search_word %>"で<%= @search_counts %>件ヒット</b>
  <% end %>
<% end %>
