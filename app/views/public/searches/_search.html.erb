<% if admin_signed_in? %>
  <% @search_path = admin_posts_path %>
<% else %>
  <% @search_path = posts_path %>
<% end %>

<%= form_with url: search_path, method: :get do |f| %>
  <div class="row">
    <div class="col-lg-8">
      <%= f.text_field :word, class: "form-control form-control-lg", placeholder: "投稿検索" %>
    </div>
    <div class="col-lg-4">
      <%= f.submit "検索", class: "btn btn-secondary btn-lg" %>
    </div>
  </div>
  <% unless @search_counts.nil? %>
  　<b class="row" style="font-size: 18px;">⇒  "<%= @search_word %>"で<%= @search_counts %>件ヒット</b>
　<% end %>
<% end %>