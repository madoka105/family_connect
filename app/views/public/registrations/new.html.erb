<!-- 新規登録画面 -->


<div class="container my-5">
  <div class="row px-4">
    <h1 class="col-12 mb-5 text-center">新規会員登録</h1>
  </div>

  <div class="col-12 registrations">
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">名前</label>
        <div class="col-md-9">
          <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: '鈴木 一郎' %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">メールアドレス</label>
        <div class="col-md-9">
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: 'sample@sample.com' %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">電話番号（ハイフンなし）</label>
        <div class="col-md-9">
          <%= f.text_field :phone_number, class: "form-control", autofocus: true, placeholder: '00000000000' %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">パスワード（６文字以上）</label>
        <div class="col-md-9">
          <%= f.password_field :password, class: "form-control password", autocomplete: "new-password", placeholder: '123456' %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3 col-form-label" style="font-size: 20px;">パスワード（確認用）</label>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, class: "form-control password_confirm", autocomplete: "new-password", placeholder: '123456' %>
        </div>
      </div>

        <div class="col-md-9 offset-md-3">
          <%= f.submit "新規登録", class: "btn btn-success btn-lg btn-block mt-3 mb-5" %>
        </div>
    <% end %>

    <div class="text-center">
      <h2>既に登録済みの方</h2>
      <p><%= link_to "こちら", new_user_registration_path %> からログインしてください。</p>
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>
