<div class="row login-row">
  <h2>新規登録</h2>

  <%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br/>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br/>
    <%= f.text_field :phone_number, autofocus: true, autocos: true, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>


  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>


  <% end %>

  <h2>既に登録済みの方</h2>

  <%= link_to "こちら", new_user_registration_path %>
  <span>からログインしてください。</span>
  <p id="notice"><%= notice %></p>

  <%= render "public/shared/links" %>

</div>

