<!--トップページ-->
<%#= stylesheet_pack_tag "public/homes", :media => "all" %>
<div class="container">
  <div class="row pt-3">
    <div class="col-12 text-center">
      <h1 class="main-visual-text mb-5">ようこそ！ family_connectへ！</h1>
    </div>
    <div class="btn-wrapper col-12 mx-auto">
      <div class="row">
          <% if user_signed_in? %>
            <%= link_to "話す", chats_path, class: 'btn btn-info btn-block' %>
          <% else %>
            <%= link_to "ログイン", user_session_path, class: 'btn btn-info btn-lg btn-block sign_in my-5' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-success btn-lg btn-block sign_up mt-5' %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>