<!--(管理者)投稿一覧画面-->
<div class="container mt-4 md-4">
  <h2 class="text-center">投稿一覧</h2>
  <div class="row">
    <div class="table post_table table-inverse">
      <table>
         <thead class="table-info">
          <tr>
            <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2">氏名</th></th>
            <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2">投稿日</th>
            <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2">投稿内容</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.user.name %></td>
            <td>
              <%= link_to post_path(post) do %>
                <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              <% end %>
            </td>
            <td><%= post.text %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-3"><%= paginate(@posts) %></div>
    </div>
  </div>
</div>