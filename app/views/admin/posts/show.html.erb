<!--投稿詳細画面-->

<div class="container mt-4">
  <div class="row my-3">
    <div class="col-12">
      <h2 class="text-center">投稿詳細</h2>
    <div class="col-xs-10 col-xs-offset-1" style="margin-top: 50px;">
      <table class="table table-bordered">
        <thead>
          <tr class="table-head" style="background-color:#F5F5F5;">
            <th scope="col-lg-6">投稿者</th>
            <th scope="col-lg-6">投稿日時</th>
            <th scope="col-lg-6">投稿内容</th>
            <th scope="col-lg-6">写真</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @post.user.name %></td>
            <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= @post.text %></td>
            <td>
              <% if @post.image.attached? %>
                <%= image_tag @post.image, size: "350x250", class: "" %>
              <% else %>
                画像はありません
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-center mt-3">
          <%= link_to '削除する', admin_post_path(@post.id), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
    </div>
  </div>
</div>
