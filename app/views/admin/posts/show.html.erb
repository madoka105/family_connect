<!--投稿詳細画面-->

<div class="container mt-4">
  <div class="row my-3">
    <div class="col-12">
      <h2 class="text-center">投稿詳細</h2>
      <div class="table-responsive">
        <table class="table table-bordered">
          <tr class="table-head">
            <th class="col-lg-3 col-6" style="background-color:#F5F5F5;">投稿者</th>
            <td class="col-lg-9 col-6"><%= @post.user.name %></td>
          </tr>
          <tr>
            <th class="col-lg-3 col-6" style="background-color:#F5F5F5;">投稿日時</th>
            <td class="col-lg-9 col-6"><%= @post.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="col-lg-3 col-6" style="background-color:#F5F5F5;">投稿内容</th>
            <td class="col-lg-9 col-6"><%= @post.text %></td>
          </tr>
          <tr>
            <th class="col-lg-3 col-6" style="background-color:#F5F5F5;">写真</th>
            <td class="col-lg-9 col-6">
              <% if @post.image.attached? %>
                <%= image_tag @post.image, size: "350x250", class: "img-fluid" %>
              <% else %>
                画像はありません
              <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div class="text-center mt-3">
        <%= link_to '削除する', admin_post_path(@post.id), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>