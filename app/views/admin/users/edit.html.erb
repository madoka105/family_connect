<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @users.name %>さんの会員情報編集</h4>
      <%= form_with model: @users, url: admin_user_path, method: :patch do |f| %>
      <table class="table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @users.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text.field :phone_number %></td>
          <td></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :withdrawal, :false %>
            <%= f.label :withdrawal, "有効", { value: :false } %>
            
            <%= f.radio_button :withdrawal, :true %>
            <%= f.label :withdrawal, "退会", { value: :true } %>
          </td>
        </tr>
        
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>