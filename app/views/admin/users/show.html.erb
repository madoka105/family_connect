<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h4 class="text-center mb-4"><%= @users.name %>さんの会員詳細</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light">会員ID</th>
            <td><%= @users.id %></td>
          </tr>
          <tr>
            <th class="bg-light">氏名</th>
            <td><%= @users.name %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @users.phone_number %></td>
          </tr>
          <tr>
            <th class="bg-light">メールアドレス</th>
            <td><%= @users.email %></td>
          </tr>
          <tr>
            <th class="bg-light">会員ステータス</th>
            <td>
              <% if @users.is_withdrawal %>
                <span class="text-success font-weight-bold">退会</span>
              <% else %>
                <span class="text-muted font-weight-bold">有効</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
