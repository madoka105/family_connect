<div class="container w-75">
  <div class="margin-y">
    <h2 class="text-center mt-5 md-5">会員一覧</h2>
      <div class="d-flex align-items-center">
        <table class="table table-hover margin-y">
          <thead>
            <tr>
              <th class="bg-brown">会員ID</th>
              <th class="bg-brown">氏名</th>
              <th class="bg-brown">メールアドレス</th>
              <th class="bg-brown">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to (user.name), admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <td><% if user.is_withdrawal %>
                    <span class="text-muted">退会済み</span>
                  <% else %>
                    <span class="text-success"><strong>有効</strong></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @users %>
    </div>
  </div>
</div>