<!--管理者ログイン画面-->
<div class="container my-5">
  <div class="row px-4">
    <h3 class="col-12 mb-5 text-center">管理者ログイン</h3>
  </div>

  <div class="col-12 registrations">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row justify-content-center mt-2">
        <label class="col-2">メールアドレス</label>
          <%= f.email_field :email, :size => "40", autofocus: true, placeholder: "admin@test.com", autocomplete: "email" %>
      </div>

      <div class="field row justify-content-center mt-2">
        <label class="col-2">パスワード</label>
          <%= f.password_field :password, :size => "40", autofocus: true, placeholder: "admin123", autocomplete: "password" %>
      </div>
      <div class="row justify-content-center mt-2">
        <div class="actions", style="margin-left:30px">
          <%= f.submit "ログイン", class: "btn btn-info mt-4", style: "width:150px" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
