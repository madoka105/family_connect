<!--管理者ログイン画面-->

<div class="container my-5">
  <div class="row px-4">
    <h3 class="col-12 mb-5 text-center">管理者ログイン</h3>
  </div>

  <div class="col-12 registrations">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row justify-content-center mt-2">
        <label class="col-md-2 col-form-label">メールアドレス</label>
        <div class="col-md-7">
          <%= f.email_field :email, class: "form-control", size: "40", autofocus: true, placeholder: "admin@test.com", autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group row justify-content-center mt-2">
        <label class="col-md-2 col-form-label">パスワード</label>
        <div class="col-md-7">
          <%= f.password_field :password, class: "form-control", size: "40", autofocus: true, placeholder: "admin123", autocomplete: "password" %>
        </div>
      </div>
      <div class="form-group row justify-content-center mt-4 text-center">
        <div class="col-md-7">
          <%= f.submit "ログイン", class: "btn btn-info", style: "width:150px" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
